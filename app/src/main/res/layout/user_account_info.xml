<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_circle_foreground" />

    <TextView
        android:id="@+id/username"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="40dp"
        android:text="Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="40dp"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pastWrapped"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="440dp"
        android:text="Past Spotify Wrapped Summaries"
        android:background="@color/black"
        android:textColor="#1DB954"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrowForward1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="#1DB954"
        app:layout_constraintEnd_toEndOf="@+id/pastWrapped"
        app:layout_constraintTop_toTopOf="@+id/pastWrapped"
        app:srcCompat="@drawable/arrow_forward_foreground" />

    <TextView
        android:id="@+id/editLoginInfo"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="360dp"
        android:text="Edit Login Info"
        android:background="@color/black"
        android:textColor="#1DB954"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrowForward2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="#1DB954"
        app:layout_constraintEnd_toEndOf="@+id/editLoginInfo"
        app:layout_constraintTop_toTopOf="@+id/editLoginInfo"
        app:srcCompat="@drawable/arrow_forward_foreground" />

    <TextView
        android:id="@+id/deleteAccount"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="280dp"
        android:text="Delete Account"
        android:background="@color/black"
        android:textColor="#1DB954"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/arrowForward3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:tint="#1DB954"
        app:layout_constraintEnd_toEndOf="@+id/deleteAccount"
        app:layout_constraintTop_toTopOf="@+id/deleteAccount"
        app:srcCompat="@drawable/arrow_forward_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>